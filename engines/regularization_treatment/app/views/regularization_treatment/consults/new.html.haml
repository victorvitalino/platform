.block-header
  %h2 Consulta Regularização
#messages-main.card.m-b-0
  .ms-menu
    .ms-block
      .ms-user
        %div
          %h5 Pesquisa por CPF
          = simple_form_for @consult do |f|
            = f.input :cpf, label: false
            = f.submit "Pesquisar", class: 'btn btn-success'
  .ms-body
    .listview.lv-message
      .lv-header-alt.bgm-white
        .lvh-label.hidden-xs
          %span.c-black
            %h3
              %b Resultado
      .lv-body
        = render 'requeriments'
        = render 'attendances'
        = render 'schedules'

