= simple_form_for [@project, :restrict, @candidate], url: project_restrict_password_path(project_id: @project, id: @candidate), method: :put do |f|
  .row
    .col-md-4
      = f.input :password, hint: 'Digite a nova senha'
    .col-md-4
      = f.input :confirmation_password, hint: "Repita a nova senha"
    .col-md-4
      = f.input :current_password, label: "Senha atual", hint: "Por motivos de seguran√ßa informe sua senha atual"
  %hr/
  .row
    .col-md-12
      = f.submit "Atualizar minha senha", class: 'btn btn-success'