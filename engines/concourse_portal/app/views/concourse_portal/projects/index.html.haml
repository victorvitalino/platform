.row
  .col-md-12
    %h4
      %strong Concursos Codhab
%hr/
.row
  .col-md-12
    #carousel-example-generic.carousel.slide{"data-ride" => "carousel"}
      .carousel-inner{:role => "listbox"}
        - @projects.where(slider: true).each_with_index do |slider, index|
          .item{:class => (index == 0 ? 'active' : '')}
            %img{:alt => "#{slider.title}", :src => "#{slider.image_header.url}"}
      %a.left.carousel-control{"data-slide" => "prev", :href => "#carousel-example-generic", :role => "button"}
        %span.glyphicon.glyphicon-chevron-left{"aria-hidden" => "true"}
        %span.sr-only Previous
      %a.right.carousel-control{"data-slide" => "next", :href => "#carousel-example-generic", :role => "button"}
        %span.glyphicon.glyphicon-chevron-right{"aria-hidden" => "true"}
        %span.sr-only Next
%br/
.row
  .col-md-12
    %h4 Concursos em andamento
%hr/
.row
  - @projects.each_with_index do |project, index| 
    .col-md-3
      .row
        .col-md-8
          %h5
            %strong= project.title
      .row
        .col-md-6
          - if project.status
            = link_to image_tag(project.image_logo.url, width: 170), concourse_portal.project_path(project) if project.image_logo?
          - else
            = image_tag(project.image_logo.url, width: 130, height: 190)
%br/
%br/
.row
  .col-md-12
    %h4 Concursos finalizados
%hr/
