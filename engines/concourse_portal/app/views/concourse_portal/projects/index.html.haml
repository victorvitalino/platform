.row
  .col-md-12{:style => 'text-align:center'}
    %h3
      %strong CONCURSOS CODHAB
- if @projects.sliders.present?
  .row
    .col-md-12
      #carousel-example-generic.carousel.slide{"data-ride" => "carousel"}
        .carousel-inner{:role => "listbox"}
          - @projects.sliders.each_with_index do |slider, index|
            .item{:class => (index == 0 ? 'active' : '')}
              %img{:alt => "#{slider.title}", :src => "#{slider.image_header.url}"}
        %a.left.carousel-control{"data-slide" => "prev", :href => "#carousel-example-generic", :role => "button"}
          %span.glyphicon.glyphicon-chevron-left{"aria-hidden" => "true"}
          %span.sr-only Previous
        %a.right.carousel-control{"data-slide" => "next", :href => "#carousel-example-generic", :role => "button"}
          %span.glyphicon.glyphicon-chevron-right{"aria-hidden" => "true"}
          %span.sr-only Next
%br/
.row
  - @projects.each_with_index do |project, index| 
    .col-md-3
      .panel.panel-default
        .panel-body
          .row
            .col-md-12
              %h4 
                %strong= project.title.downcase
                %br/
                %small
                  = project.mini_description.downcase.html_safe
              
          .row
            .col-md-12
              %h5
                %small.label.label-primary= project.step
        .panel-footer
          .row
            .col-md-12
              %h5
                = link_to "detalhes", concourse_portal.project_path(project) if project.aberto? 
                %small= "Em breve" if project.previsto?
          
%br/
