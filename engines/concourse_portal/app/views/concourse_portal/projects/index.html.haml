.row
  .col-md-12
    %h3
      %strong Concursos Codhab
%hr/
.row
  - @projects.each_with_index do |project, index| 
    .col-md-3
      .row
        .col-md-6
          - if project.status
            = link_to image_tag(project.image_logo.url, width: 130, height: 190), concourse_portal.project_path(project) if project.image_logo?
          - else
            = image_tag(project.image_logo.url, width: 130, height: 190)
        .col-md-6
          .row
            .col-md-12
              %h5
                %strong= project.title
          .row
            .col-md-12
              %br/
              %strong In√≠cio
              %br/
              #{project.start.strftime('%d/%m/%Y')}
              %br/
              %strong Fim
              %br/
              #{project.end.strftime('%d/%m/%Y')} 
          .row
            .col-md-12
              %strong= project.step.humanize
  
%br/
.row
  .col-md-12
    %h3
      %strong Concursos Finalizados
%hr/
