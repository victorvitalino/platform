.row
  .col-md-12{:style => 'text-align:center'}
    %h3
      %strong CONCURSOS CODHAB
- if @projects.sliders.present?
  .row
    .col-md-12
      #carousel-example-generic.carousel.slide{"data-ride" => "carousel"}
        .carousel-inner{:role => "listbox"}
          - @projects.sliders.each_with_index do |slider, index|
            .item{:class => (index == 0 ? 'active' : '')}
              = image_tag slider.image_header.url
        %a.left.carousel-control{"data-slide" => "prev", :href => "#carousel-example-generic", :role => "button"}
          %span.glyphicon.glyphicon-chevron-left{"aria-hidden" => "true"}
          %span.sr-only Previous
        %a.right.carousel-control{"data-slide" => "next", :href => "#carousel-example-generic", :role => "button"}
          %span.glyphicon.glyphicon-chevron-right{"aria-hidden" => "true"}
          %span.sr-only Next
%br/
%hr/
.row
  - @projects.each_with_index do |project, index| 
    .col-md-3
      = link_to image_tag(project.image_logo, width: 200), concourse_portal.project_path(project)
      %h2
        %strong= project.step.upcase