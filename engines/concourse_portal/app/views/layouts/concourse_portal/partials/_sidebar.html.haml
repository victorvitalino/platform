.list-group
  - if session[:candidate_id].present?
    %li.list-group-item= link_to "Minha Inscrição", concourse_portal.project_subscribes_success_path(@project) 
    %li.list-group-item= link_to "Trocar minha senha", concourse_portal.project_subscribes_success_path(@project) 
    %li.list-group-item= link_to "Encerrar sessão", concourse_portal.project_subscribes_logout_path(@project) 
  - else
    - if @project.aberto?
      = link_to "Inscrição", concourse_portal.project_subscribes_path(@project), class: "list-group-item #{(@current_nav == 'new_subscribe') ? 'active' : ''}"
  - if @project.consultation
    = link_to "Enviar consulta", concourse_portal.new_project_consult_path(@project), class: "list-group-item #{(@current_nav == 'new_consult') ? 'active' : ''}" 
.list-group
  = link_to "Início", concourse_portal.project_path(@project), class: 'list-group-item' 
  - @project.navs.each do |nav|
    - if nav.url?
      = link_to "#{nav.label}", nav.url, target: "#{nav.target}", class: "list-group-item #{(@page.present? && @page.id == nav.id) ? 'active' : ''}"
    - if nav.página?
      = link_to "#{nav.label}", concourse_portal.project_page_path(project_id: @project, id: nav.page), target: "#{nav.target}",class: "list-group-item #{(@page.present? && @page.id == nav.id) ? 'active' : ''}"