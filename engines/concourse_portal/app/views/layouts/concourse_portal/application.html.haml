%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Portal Codhab
    %link{:href => "http://fonts.googleapis.com/css?family=Open+Sans:400,700", :rel => "stylesheet", :type => "text/css"}/
    = stylesheet_link_tag 'portal', media: 'all'
    = javascript_include_tag 'portal', media: 'all'
    = csrf_meta_tags
    :css
      .list-group-item.active, .list-group-item.active:focus, .list-group-item.active:hover {
        z-index: 2;
        color: #FFFFFF !important;
        background-color: #5A5A5A !important;
        font-weight: bold !important;
      }
  
      .panel-warning>.panel-heading {
        color: #010101;
        background-color: #FDD000;
        border-color: #FDD000;
      }

      body {
        background-color: white;
      }

      .panel, .list-group-item {
        border: none !important;
      }

      .box_internal {
        box-shadow: none !important;
      }


  %body
    = render 'layouts/partials/portal/top_nav'
    = render 'layouts/partials/portal/header'
    %div{class: (controller_name != 'home') ? 'container main' : '' }
      .container
        .row
          .col-md-12.box
            .box_internal
              .row
                .col-md-12
                  .container
                    = image_tag @project.image_header, width: 500 if @project.image_header?

        %hr/
        .row
          .col-md-2
            = render 'layouts/concourse_portal/partials/sidebar'
          .col-md-10
            .panel
              .panel-default
                .panel-body
                  = yield
    = render 'layouts/partials/portal/footer'
