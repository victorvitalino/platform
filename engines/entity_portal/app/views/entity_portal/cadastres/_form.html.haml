= simple_form_for @cadastre do |f|
  .row
    .col-md-12
      %h4 Informações Gerais
  %hr/
  .row
    .col-md-3
      = f.input :cnpj, input_html: { class: 'cnpj'}
    .col-md-9
      = f.input :name, input_html: { placeholder: "Digite o nome fatansia da cooperativa"}
  .row
    .col-md-3
      = f.input :fantasy_name, input_html: { placeholder: "Digite a sigla da cooperativa"}
    .col-md-2
      = f.input :telephone, input_html: { placeholder: "Somente números"}
    .col-md-2
      = f.input :telephone_optional, input_html: { placeholder: "Somente números"}
    .col-md-2
      = f.input :celphone, input_html: { placeholder: "Somente números"}
    .col-md-3
      = f.input :email, input_html: { placeholder: "Informe um e-mail"}
  %hr/
  .row
    .col-md-3
      = f.association :city, collection: Address::City.federal_district, prompt: "selecione..."
    .col-md-2
      = f.input :cep, input_html: { placeholder: "Somente números"}
    .col-md-7
      = f.input :address, input_html: { placeholder: "Informe o logradouro/endereço"}
  .row
    .col-md-5
      = f.input :complement, input_html: { placeholder: "Informe o complemento"}
    .col-md-2
      = f.input :number, input_html: { placeholder: "Nº"}
  %br/
  .row
    .col-md-12
      %h4 Dados de acesso
  %hr/
  .row
    .col-md-3
      = f.input :password, input_html: { placeholder: "Mínimo 8 dígitos"}
    .col-md-3
      = f.input :password_confirmation, input_html: { placeholder: "Confirme a senha"}
  %hr/
  .row
    .col-md-12
      = f.submit 'Realizar cadastro da entidade', class: 'btn btn-warning', data:  {disable_with: "Realizando o cadastro, aguarde...."}
      = link_to "Voltar", portal.root_path, class: 'btn btn-default'
      
