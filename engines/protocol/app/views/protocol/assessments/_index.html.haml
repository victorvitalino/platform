- @assessments.each do |a|
  %tr
    %td
      = a.document_number
    %td
      = a.document_type.name
    %td
      = a.sector.name
    %td.col-md-2
      .btn-group.dropup
        %button.btn.btn-info.dropdown-toggle.waves-effect{"aria-expanded" => "false", "data-toggle" => "dropdown", :type => "button"}
          Ações
          %span.caret
        %ul.dropdown-menu{:role => "menu"}
          %li
            = link_to 'Editar', edit_assessment_path(a)
          %li
            = link_to 'Visualizar', assessment_path(a)
          %li
            = link_to 'Documento Digital',  new_assessment_digital_document_path(a)
          %li
            = link_to 'Deletar', assessment_path(a), method: :delete, data: { confirm: 'Are you sure?' }
          %li
            = link_to 'Anexar/Apensar Documento', new_assessment_attach_document_path(a)