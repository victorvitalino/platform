.page-content
  .documents-wrap.article
    #articleAffix.article-sidebar.affix-top
      %ul.list-group.nav
        %li.list-group-item
          Pesquisar Documento
          = simple_form_for  new_assessment_attach_document_path, :method => 'get' do |f|
            .row
              .col-md-12
                = f.label :document, class: 'fg-label'
                = f.input :document, label: false, input_html: { name: 'document', value: params[:document]}
            .row
              .col-md-12
                = f.label :document_type, class: 'fg-label'
                = f.input :document_type, as: 'select', collection: Protocol::DocumentType.all, label: false, :prompt => 'Selecione', input_html: { name: 'document_type'}
            .row
              .col-md-12
                = f.submit 'Pesquisar', class:  'btn btn-success', input_html: { name: nil}
    .article-content
      .row
        .col-md-12
          %h4 Anexar/Apensar Documento
          .row
            .col-md-12
              = render 'index_search'
          .lv-item.media
            .col-md-12
              - if @attach_documents.present?
                = render 'index_result'
      .row
        .col-md-12
          = link_to "voltar",  assessments_path, class: 'btn btn-dark'







