= simple_form_for [:assessment, @digital_document], remote: true do |f|
  .card-body.card-padding
    .row
      .col-md-5
        = f.label :page_number, class: 'fg-label'
        = f.input :page_number, label: false, input_html: { placeholder: 'Digite uma p√°gina'}
    .row
      .col-md-12
        = f.label :doc_path, as: 'file', class: 'fg-label'
        = f.input :doc_path, as: 'file', label: false, input_html: { placeholder: 'Insira uma imagem'}
        = image_tag @digital_document.doc_path_url, width: '150' if @digital_document.doc_path?
    .row
      .col-md-4
        = f.button :submit, class: 'btn btn-success btn-sm',data: {disable_with: "carregando..."}
        %br
        %br
    .row
      .col-md-12
        - if @digital_documents.present?
          = render 'index'
