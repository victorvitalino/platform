.row
  .col-md-12.box
    .panel.panel-default
      .panel-body
        .row
          .col-md-6.col-md-offset-3
            %h1{style: "text-align: center !important"} 
              %b Regularização - Pesquisa CPF 
              %br/
              %small
                Informe um CPF para realizar a busca
        %hr/
        .row
          .col-md-12
            %br/
            %br/
            .row
              .col-md-8.col-md-offset-4
                = simple_form_for @candidate, url: show_candidate_path, method: :post do |f|
                  .row
                    .col-md-4
                      = f.input :cpf
                    .col-md-2{style: 'padding-top: 25px'}
                      = f.submit "Realizar Pesquisa", class: 'btn btn-success',data: {disable_with: "carregando..."}                    
