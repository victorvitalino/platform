.card
  .card-header.ch-alt
    %h2
      Postos de Atendimento
      = link_to 'Novo Posto', attendance.new_station_path, class: 'btn btn-success pull-right'
      %small Listagem de postos dẽ atendimento
  .table-responsive{:style => "overflow: hidden; outline: none;", :tabindex => "3"}
    %table.table.table-striped.datatable
      %thead
        %tr
          %th #
          %th Nome
          %th Cidade
          %th Tipo
          %th Convocação
          %th{:colspan => "3"} Ações
      %tbody
        - @stations.each_with_index do |station, index|
          %tr
            %td= index + 1
            %td= station.name
            %td= station.city.name if station.city.present?
            %td= station.station_type
            %td
            %td.col-md-2
              = link_to '', station_station_attendants_path(station), class: 'md md-edit btn btn-success'
              = link_to '', station_counters_path(station), class: 'md md-edit btn btn-success'
              = link_to '', edit_station_path(station), class: 'md md-edit btn btn-primary'
              = link_to '', station, class: 'md md-delete btn btn-danger', :method => :delete, :data => { :confirm => t(:confirm_delete) }
