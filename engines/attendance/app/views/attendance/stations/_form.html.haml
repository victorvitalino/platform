= simple_form_for(@station) do |f|
  .card-body.card-padding
    .row
      .col-md-4
        = f.label :name, class: 'fg-label'
        = f.input :name, label: false, input_html: { placeholder: 'Digite um nome'}
    .row
      .col-md-2
        = f.label :city, class: 'fg-label'
        = f.association :city, label: false, collection: Address::City.federal_district, prompt: 'selecione...'
      .col-md-2
        = f.label :station_type, class: 'fg-label'
        = f.input :station_type, as: :select, label: false, collection: Attendance::Station.station_types.keys.to_a, prompt: 'selecione...'
    .row
      .col-md-4
        .toggle-switch{"data-ts-color" => "blue"}
          %label
            .ts-label{:for => "ts4"}
              = f.label :status
          = f.check_box :status, label: false, id: 'ts4',hidden: 'hidden', type: 'checkbox'
          %label.ts-helper{:for => "ts4"}
    %hr/
    .row
      .col-md-12
        = f.button :submit, class: 'btn btn-success'
        = link_to "voltar", stations_path, class: 'btn btn-inverse'