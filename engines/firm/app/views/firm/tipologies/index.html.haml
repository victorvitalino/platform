.card
  .card-header.ch-alt
    .row
      .col-md-12
        %h2
          Tipologias
          = link_to 'nova tipologia', new_tipology_path, class: 'btn btn-success pull-right' #if policy(:sector, namespace: Person).create?
          %small Listagem de Tipologias
  %hr/
  .row
    .table-responsive{:style => "overflow: hidden; outline: none;", :tabindex => "3"}
      %table.table.table-hover.table-bordered.datatable
        %thead
          %tr
            %th Nome
            %th Tipo de Habitação
            %th Renda Familiar
            %th Status
            %th Ações
        %tbody.index-sector
          - if @tipologies.present?
            - @tipologies.each_with_index do |j, i|
              %tr
                %td.col-md-4= j.name.to_s.upcase
                %td.col-md-1= j.home_type
                %td.col-md-2= j.income_family
                %td.col-md-1= j.status ? 'ativo' : 'inativo'
                %td.col-md-2
                  = link_to "", edit_tipology_path(j),  title: 'Editar', 'data-toggle' => 'tooltip', class: 'md-mode-edit btn btn-primary waves-effect waves-button waves-float' #i  policy(:staff,              namespace: Person).update?
