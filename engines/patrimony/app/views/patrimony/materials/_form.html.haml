.row
 .col-md-12
  = simple_form_for @material, remote: true do |f|
   .row
    .col-md-12
     = f.label :name, class: 'fg-label'
     = f.input :name, label: false, input_html: { placeholder: 'Digite o material'}
   .row
    .col-md-12
     = f.label :description, class: 'fg-label'
     = f.input :description, label: false, input_html: { placeholder: 'Digite a descrição'}
   .row
    .col-md-12
     = f.label :type_material, class: 'fg-label'
     = f.association :type_material, label: false, prompt: 'selecione...'
   .row
    .col-md-12
     .checkbox.m-b-15
      %label
       = f.check_box :status
       %i.input-helper
       = f.label :status, class: 'fg-label'
   .row
    .col-md-12
     = f.button :submit, class: 'btn btn-success'
   %br/
