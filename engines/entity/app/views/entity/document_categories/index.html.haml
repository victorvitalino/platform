.page-content
  .panel
    .panel-heading
      .panel-title
        %h4
          Categoria de Documentos
          = link_to 'Nova Categoria', new_document_category_path,  data: { no_turbolink: true }, class: 'btn btn-success pull-right btn-sm' if policy(:page, namespace: Cms).create?
          %small Listagem de páginas
    .panel-body
      .table-responsive{:style => "overflow: hidden; outline: none;", :tabindex => "3"}
        %table#data-table-command.table.table-striped.table-vmiddle.bootgrid-table.datatable
          %thead
            %tr
              %th #
              %th Nome
              %th Descrição
              %th Código
              %th Status
              %th Ações
          %tbody
            - @categories.each_with_index do |category, index|
              %tr
                %td.col-md-1= index + 1
                %td= category.name
                %td= category.description
                %td= category.code
                %td.col-md-1= category.status ? 'ativo' : 'inativo'
                %td.col-md-2
                  = link_to "", edit_document_category_path(category), class: 'glyphicon glyphicon-share-alt btn btn-primary btn-xs'
                  = link_to "", document_category_path(category), method: :delete, data: { confirm: t(:confirm_delete) },  class: 'glyphicon glyphicon-remove btn btn-danger btn-xs'

