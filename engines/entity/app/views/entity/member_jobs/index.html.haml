.card
  .card-header.ch-alt
    %h2
      Cargos Diretoria Entidade
      = link_to 'Novo Cargo', new_member_job_path,  data: { no_turbolink: true }, class: 'btn btn-success pull-right' if policy(:page, namespace: Cms).create?
      %small Listagem de cargos
  .table-responsive{:style => "overflow: hidden; outline: none;", :tabindex => "3"}
    %table#data-table-command.table.table-striped.table-vmiddle.bootgrid-table.datatable
      %thead
        %tr
          %th #
          %th Nome
          %th Código
          %th Status
          %th Ações
      %tbody
        - @jobs.each_with_index do |job, index|
          %tr
            %td.col-md-1= index + 1
            %td= job.name
            %td= job.code
            %td.col-md-1= job.status ? 'ativo' : 'inativo'
            %td.col-md-2
              = link_to "", edit_member_job_path(job), class: 'md md-edit btn btn-primary'
              = link_to "", member_job_path(job), method: :delete, data: { confirm: t(:confirm_delete) },  class: 'md md-delete btn btn-danger'
      
