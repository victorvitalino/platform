.card
  .card-header.ch-alt.bgm-cyan
    %h2
      Meus Chamados
  .table-responsive{:style => "overflow: hidden; outline: none;", :tabindex => "2"}
    %table.table.table-hover.table-bordered
      %thead
        %tr
          %th OS
          %th Aberto
          %th Setor
          %th Responsável
          %th Qualificação
          %th Status
          %th Fechado
      %tbody
        - @order_services.each_with_index do |j, i|
          %tr
          %td= link_to j.number , order_service_monitor_service_orders_path(j)
          %td= j.created_at.strftime("%d/%m/%Y - %H:%M")
          %td= j.staff.name if j.staff.present?
          %td= j.status ? "Aberto" : "Fechado" if j.status.present?
          %td= j.sector.name if j.sector.present?   
          %td= j.responsible ? j.responsible.name : "Untec"
          %td
            -if j.qualification
              %span.badge
                =j.qualification
            -else
              %span.badge
                Ainda não qualificado
          %td
            -if j.status
              %span.badge.bgm-green
                Aberto
            -else
              %span.badge.bgm-red
                Fechado
          %td= j.updated_at.strftime("%d/%m/%Y - %H:%M")