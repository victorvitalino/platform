.card
  .card-header.ch-alt
    %h2
      #{@ticket_type.title.humanize} / Atendentes
      %span.pull-right
        = link_to "voltar", ticket_types_path, class: 'btn btn-inverse'
        = link_to 'Novo Atendente', new_ticket_type_ticket_attendant_path(@ticket_type), class: 'btn btn-success' if policy(:nav, namespace: Cms).create?
      %small Listagem de atendentes da central #{@ticket_type.title}
  .table-responsive{:style => "overflow: hidden; outline: none;", :tabindex => "3"}
    %table#data-table-command.table.table-striped.table-vmiddle.bootgrid-table.datatable
      %thead
        %tr
          %th Matrícula
          %th Nome
          %th E-mail
          %th Status
          %th Ações
      %tbody
        - @ticket_attendants.each do |t|
          - if t.staff.present?
            %tr
              %td= t.staff.code
              %td= t.staff.name
              %td= t.staff.email
              %td= t.status ? "ativo" : "inativo"
              %td.col-md-2
                = link_to '', edit_ticket_type_ticket_attendant_path(ticket_type_id: @ticket_type,id: t), class: 'md md-edit btn btn-primary'
                = link_to '', ticket_type_ticket_attendant_path(ticket_type_id: @ticket_type,id: t), class: 'md md-delete btn btn-danger', :method => :delete, :data => { :confirm => t(:confirm_delete) }
  
       