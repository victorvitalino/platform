#messages-main.card.m-b-0
  .ms-menu
    .ms-block
      .ms-user
        Pesquisar Máquina
    .ms-block
    .listview.lv-user.m-t-20
    = simple_form_for  new_report_machine_path, :method => 'get' do |f|
      .lv-item.media
        .media-body
          .lv-title
            = f.label 'Máquinas', class: 'fg-label'
          .lv-small
            = f.input :good, collection: @goods, label_method: :code_goods, value_method: :code_goods, label: false, prompt: "Selecione" ,input_html: { name: 'good', value: params[:good]}


      .lv-item.media
        .media-body
          .lv-small
            = f.submit 'Pesquisar', class:  'btn btn-success', input_html: { name: nil}
  .ms-body
    .listview.lv-message
      .lv-header-alt.bgm-white
        #ms-menu-trigger
          .line-wrap
            .line.top
            .line.center
            .line.bottom
        .lvh-label.hidden-xs
          %span.c-black Máquina
          =@machine ? @machine.code_goods : '-'
      .lv-body{:style => "min-height: 270px"}
        .lv-item.media
          .media-body
            = render 'index_search'








