= simple_form_for(@post_category) do |f|
  .card-body.card-padding
    .row
      .col-md-12
        = f.label :title, class: 'fg-label'
        = f.input :title, label: false, input_html: { placeholder: 'Digite um nome'}
    .row
      .col-md-12
        .checkbox
          %label
            = f.check_box :status
            %i.input-helper
            Ativar
            %br/
    .row
      .col-md-12
        = f.button :submit, class: 'btn btn-success'
        = link_to 'Voltar',post_categories_path , class: 'btn btn-danger'
