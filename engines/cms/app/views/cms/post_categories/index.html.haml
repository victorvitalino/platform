.page-content
  .panel
    .panel-heading
      .panel-title
        %h4 
          Categorias de Posts
          = link_to 'Nova categoria', new_post_category_path, class: 'btn btn-success btn-sm pull-right'
    %hr/
    .panel-body
      %table.table.table-striped.table-bordered
        %thead
          %tr
            %th Nome
            %th Publicado
            %th Ações

        %tbody
          - @post_categories.order(:title).each do |post_category|
            %tr
              %td= post_category.title
              %td.col-md-1= status_helper (post_category.status)
              %td.col-md-1
                = link_to '', edit_post_category_path(post_category), class: 'glyphicon glyphicon-pencil btn btn-primary btn-xs'
                = link_to '', post_category, class: 'glyphicon glyphicon-remove btn btn-danger btn-xs', :method => :delete, :data => { :confirm => t(:confirm_delete) } 
