%h1 Listing pages

%table
  %thead
    %tr
      %th Title
      %th Content
      %th Publish
      %th Page category
      %th
      %th
      %th

  %tbody
    - @pages.each do |page|
      %tr
        %td= page.title
        %td= page.content
        %td= page.publish
        %td= page.page_category
        %td= link_to 'Show', page
        %td= link_to 'Edit', edit_page_path(page)
        %td= link_to 'Destroy', page, :method => :delete, :data => { :confirm => 'Are you sure?' }

