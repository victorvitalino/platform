.card
  .card-header.ch-alt
    %h2 schedules
    = link_to "Novo", new_extranet_agenda_schedule_path, class: 'btn btn-success pull-right'
    %small Listagem de schedules
  .table-responsive{:style => "overflow: hidden; outline: none;", :tabindex => "3"}
    %table#data-table-command.table.table-striped.table-vmiddle.datatable
      %thead
        %tr
          %th Agenda
          %th Cpf
          %th Status
          %th Date schedule
          %th Hour schedule
          %th Observation
          %th Editar
      %tbody
        - @schedules.each_with_index do |schedule, index|
          %tr
            %td= schedule.agenda.title
            %td= schedule.cpf
            %td= schedule.status
            %td= schedule.date_schedule
            %td= schedule.hour_schedule
            %td= schedule.observation
            %td.col-md-2
              = link_to "", edit_extranet_agenda_schedule_path(schedule.agenda.id,schedule),  title: 'Editar', 'data-toggle' => 'tooltip', class: 'md-mode-edit btn btn-primary waves-effect waves-button waves-float'

