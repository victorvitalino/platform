.modal-header
  %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
    %span{"aria-hidden" => "true"} ×
  %h4#modal.modal-title Detalhamento de Consulta
.modal-body
  .row
    .col-md-12
      %h5
        %b conteúdo
  .row
    .col-md-12
      = @consult.content
  %hr/
  .row
    .col-md-4
      %b Realizado em
      %br
      = @consult.created_at.strftime('%d/%m/%Y às %H:%M')
    .col-md-4
      %b Status
      %br
      = @consult.status ? 'lido' : 'não lido'
  %hr/
  .row
    .col-md-12
      = link_to "Marcar como lido", "#", class: 'btn btn-success pull-right'
  %br/