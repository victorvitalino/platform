.panel
  .panel-heading
    .panel-title
      %h3 Consultas
  .panel-body
    %table.table.table-striped.table-hover.table-bordered
      %thead
        %tr.info
          %th Nº
          %th Data de envio
          %th Status
          %th Ação
      %tbody
        - @project.consults.each_with_index do |consult, index|
          %tr
            %td.col-md-1= index + 1
            %td.col-md-2= consult.created_at.strftime('%d/%m/%Y às %H:%M')
            %td= consult.status ? 'Leitura realizada' : 'Não lida'
            %td.col-md-1
              = link_to "", project_consult_read_path(project_id: @project, consult_id: consult), class: 'btn btn-success glyphicon glyphicon-share-alt' if !consult.status
              = link_to "", project_consult_path(project_id: @project, id: consult), remote: true, class: 'glyphicon glyphicon-share-alt btn btn-primary btn-xs'