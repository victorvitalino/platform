= simple_form_for(@participation) do |f| 
  .card-body.card-padding
    .row
      .col-md-12
        = f.label :project, class: 'fg-label'
        = f.association :project, label: false, prompt: 'selecione...'
    .row
      .col-md-12
        = f.label :title, class: 'fg-label'
        = f.input :title, label: false, prompt: 'selecione...'
    .row
      .col-md-12
        = f.label :start, class: 'fg-label'
        = f.input :start, label: false, prompt: 'selecione...'
    .row
      .col-md-12
        = f.label :end, class: 'fg-label'
        = f.input :end, label: false, prompt: 'selecione...'
    .row
      .col-md-12
        = f.label :publish, class: 'fg-label'
        = f.input :publish, label: false, prompt: 'selecione...'
    .row
      .col-md-12
        = f.label :observation, class: 'fg-label'
        = f.input :observation, label: false, prompt: 'selecione...'
    .row
      .col-md-12
        = f.label :subscribe, class: 'fg-label'
        = f.association :subscribe, label: false, prompt: 'selecione...'
    .row
      .col-md-12
        = f.button :submit, class: 'btn btn-success'
        = link_to "voltar", participations_path,class: 'btn btn-inverse' 

