.card
  .card-header.ch-alt
    .row
      .col-md-12
        %h2
          Setores
          = link_to 'novo setor', new_sector_path, remote: true, class: 'btn btn-success pull-right'if policy(:sector, namespace: Person).create?
          %small Listagem de setores
  .row
    = simple_form_for sectors_path, method: :get do |f|
      .col-md-2
        = f.label "Ativo?"
        = f.input :status, as: :select, label: false, selected: params[:status], include_blank: "Todos", input_html: { name: :status}
      .col-md-2.inline-button
        = f.submit "Filtar", name: nil, class: 'btn btn-primary'
  %hr/
  .row
    .table-responsive{:style => "overflow: hidden; outline: none;", :tabindex => "3"}
      %table.table.table-hover.table-bordered.datatable
        %thead
          %tr
            %th Nome
            %th Sigla
            %th Setor Pai
            %th Responsável
            %th Status
            %th Ações
        %tbody.index-sector
          = render 'index'
