- @staffs.each_with_index do |j, i|
 %tr
  %td.col-md-4= j.name.to_s.upcase
  %td.col-md-1= j.code
  %td.col-md-2= j.sector_current.acron if j.sector_current.present?
  %td.col-md-1= j.branch_line.telephone if j.branch_line.present?
  %td.col-md-1= j.status ? 'ativo' : 'inativo'
  %td.col-md-2
   = link_to "", edit_staff_path(j),  title: 'Editar', 'data-toggle' => 'tooltip', class: 'md-mode-edit btn btn-primary waves-effect waves-button waves-float' if policy(:staff, namespace: Person).update?
