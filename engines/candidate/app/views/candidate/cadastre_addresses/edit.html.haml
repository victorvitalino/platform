.page-content
  .panel
    .panel-heading
      .panel-title
    .panel-body
      .row
        .col-md-12
          %section
            %h2.bold Assentar
          %hr/
          %section
            - if @candidate.present?
              .row
                .col-md-12
                  .bootstrap-table
                    %table.table.table-striped.table-bordered.table-condensed
                      %thead{:style => "display: table-header-group;"}
                        %tr
                          %th Nome
                          %th CPF
                          %th Status
                          %th Situação de Processo
                      %tbody
                        %tr
                          %td= @candidate.cadastre.name
                          %td= @candidate.cadastre.cpf
                          %td= @candidate.cadastre.current_situation_name
                          %td= @candidate.cadastre.cadastre_procedurals.last.procedural_status.name.upcase
              .row
                .col-md-12
                  .bootstrap-table
                    %table.table.table-striped.table-bordered.table-condensed
                      %thead{:style => "display: table-header-group;"}
                        %tr
                          %th{:colspan => "2"} Endereço
                          %th Cidade
                          %th Data TCU
                      %tbody
                        %tr
                          %td{:colspan => "2"}= @candidate.unit.complete_address
                          %td= @candidate.unit.city.name
                          %td= @candidate.created_at.strftime('%d/%m/%Y')
                      %thead{:style => "display: table-header-group;"}
                        %tr
                          %th Doado
                          %th Escriturado
                          %th Inscrição IPTU
                          %th Situação do Imóvel
                      %tbody
                        %tr
                          %td= @candidate.unit.donate ? "Sim" : "Não"
                          %td= @candidate.unit.registry_units.last.situation
                          %td= @candidate.unit.registration_iptu
                          %td= @candidate.unit.situation_unit.description
              .row
                .col-md-12
                  = simple_form_for @candidate, url_for, method: :get  do |f|
                    .row
                      .col-md-2
                        = f.label  "Data de Distribuição", class: 'fg-label'
                        = f.input :created_at, label: false, input_html: { class: 'date', placeholder: '00/00/0000'}
                      .col-md-2
                        = f.label  "se regularização por Decreto, informar: ", class: 'fg-label'
                        = f.input :city_id, as: 'select', collection: Address::City.federal_district, label: false, prompt: "Selecione..."
                    .row
                      .col-md-2
                        = f.submit 'Assentar' , class: 'btn btn-success btn-sm',data: {disable_with: "carregando..."}





