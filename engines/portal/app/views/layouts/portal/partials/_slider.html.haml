.topSlider
  .flex-container
    .flexslider
      / .slides
      .flex-viewport
        %ul.slides
          - slider_each(4,'DESC') do |s|
            %li.clone{"aria-hidden" => "true"}
              .div-image{:style => "background-image: url(#{s.thumb})"}
              .flex-caption{ :class => "#{s.post_category.title}"}
                %a.explore{:href => "#"}
                = "##{s.post_category.title}"
                .latestDate
                  = s.date.strftime('%d/%m/%Y')
                %h3
                  = s.title
                .sliderp
                  %p
                    = link_to s.resume.html_safe, post_path(s)
                /  %hr
                /  .block-left
                /    = link_to "Leia Mais", content_post_path(s), class: 'sliderLink'
    .controlWrapper
      %ul.custom-controls
        - slider_each(4,'DESC') do |s|
          %li
            = link_to "#{s.title}", post_path(s)
