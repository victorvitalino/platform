.landingBkgd
  .container.main{:role => "main"}
    .content
      .main-content.your-council
        .internal
          .post-meta
            .post-author
              - if @page.author?
                = @page.author
                - if @page.link?
                  = link_to @page.label_link, @page.link, target: "_BLANK"
                - else
                  = @page.label_link
            .post-date
              = @page.created_at.strftime('%d/%m/%Y')
          / /sn_post_meta
          .internal-content
            %h1.post-header
              = @page.title
            %p.img-thumbpost
              - if @page.active_photo?
                - if @page.photo_author?
                  %strong
                    Foto:
                    = @page.photo_author.html_safe
                  = image_tag @page.thumbnail, width:'500px', height:'300px'
                  - if @page.photo_description?
                    %br
                    %i.desc-fots
                      = @page.photo_description.html_safe
            = @page.content.html_safe
            %a.back-to-top.launch.button{"aria-label" => "back to top", :href => "#"} Voltar ao Topo
            %div{:style => "clear: both;"}
