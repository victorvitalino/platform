#footer
  .star-footer
  .container
    .social.sixteen.columns
    .sixteen.columns
      .five.columns.contact-form.alpha
        = image_tag('/images/logo_codhab.png', class: 'logo_footer')
      .five.columns
        %h3 Últimas Notícias
        .footer-box
          - post_each(3, 'DESC') do |p|
            .noticias-footer
              %p
                = link_to p.title, portal.post_path(p)
              %p
                = p.date.strftime('%d/%m/%Y')
      .five.columns.omega
        %h3 Entre em Contato
        .footer-box
          %p
            %span{"aria-label" => "address"}
              Edifício SEDHAB - Setor Comercial Sul
              %br
                Quadra 06, Bloco A - Lotes 12/13 - Térreo.
                %br
                  Brasília/DF
          %h3 Central de Atendimento
          %p
            %span{"aria-label" => "address"}
              156 opção 5. Das 7h às 19h
