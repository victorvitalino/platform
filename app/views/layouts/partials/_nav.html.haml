%header#header
  %ul.header-inner
    %li#menu-trigger{"data-trigger" => "#sidebar"}
      .line-wrap
        .line.top
        .line.center
        .line.bottom
    %li.logo.hidden-xs
      = link_to "Extranet <b>codhab</b>".html_safe, dashboard.root_path
    - if current_user.account.attendant.present?
      %li.logo.hidden-xs
        - if current_user.account.attendant.station_attendant.present? && 
          = link_to "<b>Posto</b> #{current_user.account.attendant.station_attendant.station.name} |  <b>Guichê</b> #{current_user.account.attendant.station_attendant.counter.number}".html_safe, attendance.edit_attendant_counter_path(current_user.account_id), remote: true
        - else
          = link_to "<b> Não alocado</b>"
    %li.pull-right
      %ul.top-menu
        %li#toggle-width
          .toggle-switch
            %input#tw-switch{:type => "checkbox", :value => "checked", :hidden => "hidden"}
              %label.ts-helper{:for => "tw-switch"}
        %li.toggle-switch
          = link_to "Gestão de Atendimento", "#", class: 'btn btn-primary'
        %li.toggle-switch
          - if  current_user.account.sector_current.present?
            = link_to "Abrir chamado", helpdesk.new_order_service_path, remote: true, class: 'btn btn-danger'
        %li#chat-trigger.hidden-xs{"data-trigger" => "#chat"}
          %a.tm-search{:href => ""}
  / Top Search Content
  #top-search-wrap
    %input{:type => "text"}
      %i#top-search-close ×
