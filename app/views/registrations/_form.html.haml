= simple_form_for(resource, as: resource_name, url: user_registration_path(resource_name), html: { method: :put }) do |f|
  .card-body.card-padding
    .row
      .col-md-3
        = f.label :username
        = f.input :username, label: false, required: true, autofocus: true
      
    .row
      .col-md-3
        = f.label :password
        = f.input :password, label: false, autocomplete: "off", hint: "deixe em branco caso não queira alterar sua senha atual", required: false
      .col-md-3
        = f.label :password_confirmation
        = f.input :password_confirmation, required: false, label: false
    .row
      .col-md-3
        = f.label :current_password
        = f.input :current_password, label: false, hint: "Precisamos confirmar sua senha atual para realizar as alterações", required: true
    %hr/
    .row
      .col-md-12
        = f.button :submit, "Atualizar minha Conta", class: 'btn btn-success'
        = link_to "Voltar", main_app.dashboard_path, class: 'btn btn-inverse'