.page-content
  .panel
    .panel-heading
      .panel-title
        %h4
          Tipos de acompanhamento
          = link_to 'novo tipo de acompnhamento', new_advice_type_path, remote: true, class: 'btn btn-success pull-right btn-sm',data: {disable_with: "carregando..."}
    .panel-body
      .table-responsive{:style => "overflow: hidden; outline: none;", :tabindex => "3"}
        %table#data-table-command.table.table-striped.table-bordered
          %thead
            %tr
              %th #
              %th Nome
              %th Descrição
              %th Status
              %th Ações
          %tbody.index-advice_type
            - @advice_types.each_with_index do |j, i|
              %tr
                %td.col-md-1
                  = i + 1
                %td
                  = j.name
                %td
                  = j.description
                %td
                  = j.status ? "Ativo" : "Inativo"
                %td.col-md-2
                  = link_to "", edit_advice_type_path(j), remote: true, class: 'glyphicon glyphicon-pencil btn btn-primary btn-xs',data: {disable_with: "carregando..."}
                  = link_to "", advice_type_path(j), method: :delete, class: 'glyphicon glyphicon-remove btn btn btn-danger btn-xs', data: {confirm: "#{t(:confirm_delete)}"}


