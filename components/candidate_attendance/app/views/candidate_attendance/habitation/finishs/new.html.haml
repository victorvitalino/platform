.panel.panel-default
  .panel-heading
    %h3.panel-title
      Atendimento - Parecer do analista
  .panel-body
    .row
      .col-md-12
        .row
          .col-md-12

            .row
              .col-md-12
                %h2 Atualizações
                %table.table.table-striped.table-hover.table-bordered
                  %thead
                    %tr
                      %th Item
                      %th Data e hora
                  %tbody
                    %tr
                      %td Inicio do atendimento
                      %td= @cadastre_mirror.created_at.strftime("%d/%m/%Y às %H:%M") 
                    %tr
                      %td Atualização cadastral
                      %td= @cadastre_mirror.updated_at.strftime("%d/%m/%Y às %H:%M") 
                    %tr
                      %td Atualização dependentes
                      - if @cadastre_mirror.dependent_mirrors.present?
                        %td= @cadastre_mirror.dependent_mirrors.order(:updated_at).last.updated_at.strftime("%d/%m/%Y às %H:%M") 
                      - else
                        %td 
                          %i Não existe dependentes cadastrados
            .row
              .col-md-12
                %h2 Checklist
                %table.table.table-striped.table-hover.table-bordered
                  %thead
                    %tr
                      %th Item
                      %th Autenticado?
                      %th Checado?
                  %tbody
                    - @checklists.each do |check|
                      %tr
                        %td.col-md-10= check.name
                        %td
                          - if @cadastre_mirror.cadastre_checklists.authenticate?(check)
                            %span.label.label-success
                              Autenticado
                          - else
                            %span.label.label-default
                              Não autenticado 
                        %td
                          - if @cadastre_mirror.cadastre_checklists.checked?(check)
                            %span.label.label-success
                              Checado
                          - else
                            %span.label.label-default
                              Não checado 
                      

            .row
              .col-md-12
                %h2 Verificações
                %table.table.table-striped.table-hover.table-bordered
                  %thead
                    %tr
                      %th Item
                      %th Descrição
                      %th Situação
                  %tbody
                    - Candidate::Verification.morar_bem.each do |ver| 
                      %tr
                        %td.col-md-2= ver.name
                        %td= ver.description
                        %td.col-md-3
                          - if ver.mirror_verificate(@cadastre_mirror)
                            %span.label.label-danger
                              = ver.text_invalid
                          - else
                            %span.label.label-success
                              = ver.text_valid
            %hr/
            %h2 Parecer do analista
            .row
              .col-md-12
                = simple_form_for url_for do |f|
                  .row
                    .col-md-4
                      = f.input :option
                  .row
                    .col-md-6
                      = f.input :observation
                  %hr/
                  .row
                    .col-md-12
                      = link_to "Voltar para preenchimento de checklist", habitation_cadastre_attendance_checklists_path(cadastre_attendance_id: @attendance.id), class: 'btn btn-lg btn-default'
                      = f.submit "Finalizar atendimento", class: 'btn btn-success btn-lg pull-right'

