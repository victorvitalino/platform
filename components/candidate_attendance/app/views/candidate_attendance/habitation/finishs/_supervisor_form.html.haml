%hr/
%h2 Parecer do supervisor
.row
  .col-md-12
    = simple_form_for @supervisor_finish, url: supervisor_check_habitation_cadastre_attendance_finishs_path(cadastre_attendance_id: @attendance), method: :post do |f|
      .row
        .col-md-4
          = f.input :procedural_status_id, as: :select, collection: CandidateAttendance::Habitation::CadastreProcedural.attendance_options.map { |k, v| [k.humanize, k] }, include_blank: false
      .row
        .col-md-12
          = f.input :observation
      .row
        .col-md-12
          = f.submit "Finalizar o atendimento", class: 'btn btn-success btn-lg', data: { disable_with: t(:disable_with)}
