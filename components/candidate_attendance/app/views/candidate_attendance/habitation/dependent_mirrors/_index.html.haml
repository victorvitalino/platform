- @cadastre_mirror.dependent_mirrors.each do |mirror|
  %tr
    %td= mirror.name
    %td= mirror.cpf
    %td= mirror.gender
    %td= mirror.born.strftime("%d/%m/%Y")
    %td= mirror.special_condition.name
    %td= mirror.co_acquirer ? mirror.percentage : 'NÃ£o'
    %td= number_to_currency mirror.income
    %td
      = link_to "", edit_habitation_cadastre_attendance_dependent_mirror_path(id: mirror.id, cadastre_attendance_id: @attendance), remote: true, class: 'btn btn-primary btn-xs glyphicon glyphicon-pencil' 
      = link_to "", habitation_cadastre_attendance_dependent_mirror_path(id: mirror.id, cadastre_attendance_id: @attendance),method: :delete, remote: true, data: { confirm: t(:confirm)}, class: 'btn btn-danger btn-xs glyphicon glyphicon-remove'