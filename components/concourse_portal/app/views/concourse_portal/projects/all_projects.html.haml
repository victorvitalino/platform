.row
  .col-md-12
    %h1 
      %b Todas as participações
.row
  .col-md-12  
    - if (@project.result_day.present? && @project.result_hour.present?) &&  (@project.result_day <= Date.today && @project.result_hour <= Time.now.to_formatted_s(:time)) 
      - @project.candidate_participations.each do |participation|
        .row
          .col-md-12
            %p
              %h3 #{participation.candidate.name} - Nº da pasta: #{participation.id} - Nº de inscrição: #{participation.candidate_id} - #{participation.candidate.city} / #{participation.candidate.state.acronym}
            %p
              %h4
                %i
                  - if participation.team_description.present?
                    = participation.team_description
                  - else
                    - participation.team_participations.each do |team|
                      = "#{team.name}   "
        %hr/
        .row  
          - if participation.archive_one.to_s.present?
            .col-md-2{style: 'text-align: center'}
              = link_to image_tag('/images/pdf_flat.png', width: 100), "http://www.codhab.df.gov.br#{participation.archive_one}", target: '_blank'
              %p Prancha 01

          - if participation.archive_two.to_s.present?
            .col-md-2{style: 'text-align: center'}
              = link_to image_tag('/images/pdf_flat.png', width: 100), "http://www.codhab.df.gov.br/#{participation.archive_two}", target: '_blank'
              %p Prancha 02

          - if participation.archive_three.to_s.present?
            .col-md-2{style: 'text-align: center'}
              = link_to image_tag('/images/pdf_flat.png', width: 100), "http://www.codhab.df.gov.br/#{participation.archive_three}", target: '_blank'
              %p Prancha 03
          - if participation.archive_four.to_s.present?
            .col-md-2{style: 'text-align: center'}
              = link_to image_tag('/images/pdf_flat.png', width: 100), "http://www.codhab.df.gov.br/concourse/original/#{participation.id}/04.pdf", target: '_blank'
              %p Prancha 04
          - if participation.archive_five.to_s.present?
            .col-md-2{style: 'text-align: center'}
              = link_to image_tag('/images/pdf_flat.png', width: 100), "http://www.codhab.df.gov.br/concourse/original/#{participation.id}/05.pdf", target: '_blank'
              %p Prancha síntese
        %hr/
    - else
      .row
        .col-md-12
          %p
            %h4 A divulgação de todos os projetos enviados ainda não está disponível.

