/ conteudo da pagina
:css 

  small {
    color: black !important;
  }

  body {
    background-color: #FFFFFF;
  }

  .box_internal {
    box-shadow: none !important;
  }


.container
  .row
    .col-md-12
      = render 'layouts/concourse_portal/partials/slider'
  .row
    .col-md-12.box
      .box_internal
        .row
          .col-md-12
            .container
              .row
                .col-md-12

              %hr/
              .row
                .col-md-12
                  %h3
                    %b
                      Em andamento 
                  %br/
                  .row
                    - if @projects.opens.present?
                      - @projects.opens.order(:id).each_with_index do |project, index| 
                        .col-md-4
                          .row
                            .col-md-5
                              = link_to image_tag(project.image_logo, width: 150), concourse_portal.project_path(project)
                            .col-md-6
                              %h5
                                %strong= link_to project.title.upcase, concourse_portal.project_path(project), data: {'turbolinks'=> false}
                                %h6
                                  %p= link_to project.mini_description.html_safe, concourse_portal.project_path(project), data: {'turbolinks'=> false}
                              %span
                                %p
                                  %b Início - #{project.start.strftime('%d/%m/%Y')}
                                %p
                                  %b Fim - #{project.end.strftime('%d/%m/%Y')}
                              %h5
                                %span.label.label-info
                                  = link_to project.step, concourse_portal.project_path(project), data: {'turbolinks'=> false}
                    - else
                      .col-md-12
                        Não existem concursos em andamento no momento.
              %hr/
              .row
                .col-md-12
                  %h3
                    %b
                      Previstos
                  %br/
                  .row
                    - if @projects.waiting.present?
                      - @projects.waiting.each_with_index do |project, index| 
                        .col-md-4
                          .row
                            .col-md-5
                              = image_tag(project.image_logo, width: 150)
                            .col-md-6
                              %h5
                                %strong= project.title.upcase
                                %small
                                  %p= project.mini_description
                              %h5
                                %span.label.label-info
                                  = project.step
                    - else
                      .col-md-12
                        Não existem concursos previstos no momento.

              %hr/
              .row
                .col-md-12
                  %h3
                    %b
                      Finalizados
                  %br/
                  .row
                    - if @projects.finisheds.present?
                      - @projects.finisheds.each_with_index do |project, index| 
                        .col-md-4
                          .row
                            .col-md-5
                              = link_to image_tag(project.image_logo, width: 150), concourse_portal.project_path(project)
                            .col-md-6
                              %h5
                                %strong= link_to project.title.upcase, concourse_portal.project_path(project), data: {'turbolinks'=> false}
                                %h6
                                  %p= link_to project.mini_description.html_safe, concourse_portal.project_path(project), data: {'turbolinks'=> false}
                              %span
                                %p
                                  %b Início - #{project.start.strftime('%d/%m/%Y')}
                                %p
                                  %b Fim - #{project.end.strftime('%d/%m/%Y')}
                              %h5
                                %span.label.label-info
                                  = link_to project.step, concourse_portal.project_path(project), data: {'turbolinks'=> false}
                    - else
                      .col-md-12
                        Não existem concursos finalizados no momento.
              .row
