.panel.panel-default
  .panel-heading
    %h4.panel-title 
      Tipologias
      = link_to 'Nova tipologia', new_typology_path, class: 'pull-right'
  .panel-body
    %table.table.table-bordered.table-striped.table-hover
      %thead
        %tr
          %th Nome
          %th Tipo
          %th Área
          %th Renda Fam.
          %th Valor inicial
          %th Valor final
          %th Ativa?
          %th Ações
      %tbody
        - @typologies.each do |ent|
          %tr
            %td.col-md-2= ent.name
            %td= ent.home_type
            %td= "#{ent.private_area} m²"
            %td= ent.income_family
            %td= number_to_currency ent.initial_value
            %td= number_to_currency ent.end_value
            %td= ent.status ? "sim" :  "não"
            %td.col-md-1
              .dropdown
                %button#dropdownMenu1.btn.btn-default.dropdown-toggle{"data-toggle" => "dropdown", :type => "button"}
                  %i.glyphicon.glyphicon-cog
                  %span.caret
                %ul.dropdown-menu{"aria-labelledby" => "dropdownMenu1", :role => "menu"}
                  %li= link_to "editar", edit_typology_path(ent)
                  %li= link_to "remover", typology_path(ent), method: :delete, data: { confirm: t(:confirm)}