  .card-body.card-padding
    .row
      .col-md-6
        = f.label :staff, class: 'fg-label'
        = f.association :staff, label: false, prompt: "Selecione o funcion√°rio..."
    .row
      .col-md-12
        = f.label :status
        = f.input :status, id: 'ts4',hidden: 'hidden', type: 'checkbox', label:false
    %hr/
    .row
      .col-md-12
        = f.button :submit, class: 'btn btn-success btn-sm',data: {disable_with: "carregando..."}
