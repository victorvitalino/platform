= simple_form_for([@ticket_type, @ticket_subject]) do |f|
  .card-body.card-padding
    .row
      .col-md-6
        = f.label :title, class: 'fg-label'
        = f.input :title, label: false, input_html: { placeholder: "Digite o t√≠tulo do assunto"}
    .row
      .col-md-6
        = f.label :description, class: 'fg-label'
        = f.input :description, label: false, input_html: { placeholder: "Descreva brevemente sobre o assunto"}
    .row
      .col-md-12
        = f.label :status
        = f.input :status, id: 'ts4',hidden: 'hidden', type: 'checkbox', label: false
    %hr/
    .row
      .col-md-12
        = f.button :submit, class: 'btn btn-success btn-sm',data: {disable_with: "carregando..."}
        = link_to "voltar", ticket_type_ticket_subjects_path(@ticket_type), class: 'btn btn-dark btn-sm',data: {disable_with: "carregando..."}