#scheduled.tab-pane{:class => (params[:q] == 'scheduled') ? 'active' : '', :role => "tabpanel"}
  .panel-body
    %table.table.table-striped.table-bordered.table-condensed.table-hover
      %thead
        %tr
          %th Nº
          %th Assunto
          %th Solicitante
          %th Abertura
          %th Atendente
          %th Agendado para
          %th Status
          %th Ações
      %tbody
        - @scheduled.each do |o|
          %tr
            %td= o.id
            %td= o.ticket_subject.title rescue ""
            %td= "#{o.requester.name} - #{o.requester.sector_current.acron.upcase}" if o.requester.present? && o.requester.present? && o.requester.sector_current.present?
            %td= o.created_at.strftime('%d/%m/%Y às %H:%M')
            %td= o.attendant.name rescue ""
            %td= o.ticket_ocurrences.where(scheduled: true).last.scheduled_date.strftime('%d/%m/%Y %H:%M') rescue ""
            %td
              - if o.open?
                %span.label.label-success aberto
              - if o.in_progress?
                %span.label.label-primary em atendimento
              - if o.scheduled?
                %span.label.label-primary agendado
              - if o.closed?
                %span.label.label-danger fechado
            %td
              .btn-group{:role => "group"}
                %button.btn.btn-default.dropdown-toggle{"aria-expanded" => "true", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
                  %i.glyphicon.glyphicon-cog
                  %span.caret
                %ul.dropdown-menu
                  %li
                    = link_to "Detalhes da solicitação", ticket_path(id: o, q: 'in_progress'), title: "Detalhes da solicitação"
                  %li
                    = link_to "Reagendar atendimento", new_ticket_ticket_scheduled_ocurrence_path(ticket_id: o), remote: true, title: "Reagendar atendimento"
                  %li
                    = link_to "Fechar chamado", ticket_closed_ticket_path(ticket_id: o, q: 'in_progress'),remote: true, title: "Fechar chamado"
