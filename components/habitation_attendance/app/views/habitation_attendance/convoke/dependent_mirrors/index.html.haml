.panel.panel-default
  .panel-heading
    %h4.panel-title
      Atendimento - Atualização de dependentes
  .panel-body
    .row
      .col-md-12
        = link_to "+ Adicionar dependente",new_convoke_cadastre_mirror_dependent_mirror_path(cadastre_mirror_id: @cadastre_mirror.id), remote: true, class: 'btn btn-success'
    %br/
    %br/
    .row
      .col-md-12
        %table.table.tabel-hover.table-striped.table-bordered
          %thead
            %tr
              %th Nome
              %th CPF
              %th Sexo
              %th Nascimento
              %th Condição Especial
              %th Co-adquirente
              %th Renda R$
              %th Ação
          %tbody.index-dependent
            = render 'index'

    %hr/
    .row
      .col-md-12
        = link_to "Voltar para atualização de cadastral", edit_convoke_cadastre_mirror_path(id: @cadastre_mirror.id), class: 'btn btn-default btn-lg pull-left'
        = link_to "Avançar para preenchimento de checklist", convoke_cadastre_mirror_checklists_path(cadastre_mirror_id: @cadastre_mirror.id), class: 'btn btn-primary btn-lg pull-right'