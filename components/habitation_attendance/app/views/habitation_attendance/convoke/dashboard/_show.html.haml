.row
  .col-md-12
    %h4 Informações básicas
    %table.table.tabel-hover.table-bordered
      %thead
        %tr
          %th Nome
          %th CPF
          %th RG
          %th Sexo
          %th Nascimento
      %tbody
        %tr
          %td= @candidate.name
          %td= @candidate.cpf.format_cpf
          %td= "#{@candidate.rg} - #{@candidate.rg_org}/#{@candidate.rg_uf}" 
          %td= @candidate.gender
          %td= @candidate.born.strftime('%d/%m/%Y') if @candidate.born.present?
.row
  .col-md-12
    %h4
      Atendimentos
    %table.table.tabel-hover.table-bordered
      %thead
        %tr
          %th Protocolo
          %th Data
          %th Situação
          %th Usuário
          %th Operações
      %tbody
        - @candidate.cadastre_attendances.order('created_at DESC').each do |attendance|
          %tr
            %td= attendance.id
            %td= attendance.created_at.strftime("%d/%m/%Y às %H:%M")
            %td= attendance.situation
            %td= attendance.staff.code
            %td
              .btn-group
                %button.btn.btn-default.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
                  Ações
                  %span.caret
                %ul.dropdown-menu
                  %li
                    %a{:href => "#{edit_convoke_cadastre_mirror_path(attendance.cadastre_mirror_id)}"} Prosseguir com atendimento
                  %li
                    %a{:href => "#"} Visualizar log 
                  %li
                    %a{:href => "#"} Parecer do supervisor
                  %li.divider{:role => "separator"}
                  %li
                    %a{:href => "#"} Cancelar atendimento

  .col-md-12
    %h4 Agendamentos
    - if @candidate.schedules.present?
      %table.table.tabel-hover.table-bordered
        %thead
          %tr
            %th Data
            %th Horário
            %th Agenda
            %th Situação
            %th Ação
        %tbody
          - @candidate.schedules.each do |schedule|
            %tr
              %td.col-md-2= schedule.date
              %td.col-md-2= schedule.hour
              %td.col-md-2= schedule.agenda.title if schedule.agenda.present?
              %td.col-md-3= schedule.status 
              %td.col-md-2 Sem ação
    - else
      %i Nenhum agendamento encontrado neste CPF

