.panel.panel-default
  .panel-heading
    %h3.panel-title 
      Atendimento habitacional 
  .panel-body
    .row
      .col-md-3{style: 'margin-top: 10px'}
        .row
          .col-md-12
            = simple_form_for url_for, method: :get do |f|
              .row
                .col-md-12
                  %label CPF (Somente n√∫meros)
                  = f.input :cpf, label: false, input_html: { name: 'cpf', value: params[:cpf], class: 'cpf'}
              .row
                .col-md-12
                  = f.submit "Pesquisar CPF", name: nil, class: 'btn btn-success', data: { disable_with: t(:disable_with)}
        %hr/
        .row
          .col-md-12
            = link_to "Iniciar novo atendimento", new_convoke_attendance_path(cpf: params[:cpf]), class: 'btn btn-default btn-lg' if @candidate.present?


      .col-md-8
        .row
          .col-md-12
            = render 'show' if @candidate.present?

    