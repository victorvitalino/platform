.page-content
  .panel
    .panel-heading
      .panel-title
        %h3 Atualização de dependentes
        %small
          Formulário de atualização de dependentes
    .panel-body
      .row
        .col-md-12
          = link_to "Adicionar dependente", new_attendance_dependent_path(mirror_id: @mirror), remote: true, class: 'btn btn-success btn-sm'
      %hr/
      .row
        .col-md-12
          %table.table.tabel-hover.table-striped.table-bordered
            %thead
              %tr
                %th Nome
                %th CPF
                %th Sexo
                %th Nascimento
                %th Condição Especial
                %th Co-adquirente
                %th Renda R$
                %th Ação
            %tbody.index-dependent
              = render 'index'