- @navs.order(:name).each do |nav|
  %tr
    %td= nav.name.to_s.upcase
    %td= nav.description.to_s.upcase
    %td= nav.order
    %td= nav.code
    %td
      - if nav.status
        %span.label.label-success ativo
      - else
        %span.label.label-default inativo
    %td
      = link_to "", nav_subnavs_path(nav),title: 'Submenu', 'data-toggle' => 'tooltip', class: 'glyphicon glyphicon-menu-hamburger btn btn-success btn-xs' 
      = link_to "", edit_nav_path(nav), title: 'Editar', 'data-toggle' => 'tooltip',  remote: true, class: 'glyphicon glyphicon-pencil btn-xs btn btn-primary waves-effect waves-button waves-float'
      = link_to "", nav_path(nav), method: :delete, class: 'glyphicon glyphicon-remove btn-xs btn btn-danger', data: {confirm: "#{t(:confirm_delete)}"}
