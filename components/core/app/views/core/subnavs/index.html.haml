.panel.panel-default
  .panel-heading
    .panel-title
      %h4
        Submenus
        = link_to 'novo submenu', new_nav_subnav_path, remote: true, class: 'pull-right'
  .panel-body
    .row
      .col-md-12
        %table.table.table-hover.table-bordered.table-striped
          %thead
            %tr
              %th Nome
              %th Descrição
              %th Url
              %th Código
              %th Submenu
              %th Status
              %th Ações
          %tbody.index-nav
            = render 'index'
