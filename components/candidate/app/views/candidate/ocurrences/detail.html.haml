.panel.panel-default
  .panel-heading
    %h4.panel-title Gestão de ocorrências cadastral
  .panel-body
    .row
      .col-md-12
        %h3 Realizar pesquisa
    %br/
    .row  
      .col-md-12
        = simple_form_for url_for, method: :get do |f|
          .row
            .col-md-2
              = f.input :cpf, label: 'Por cpf', input_html: { name: 'cpf', class: 'cpf', value: params[:cpf]}
            .col-md-4
              = f.input :name, label: 'Por nome', input_html: { name: 'name', class: '', value: params[:name], placeholder: "Digite o nome completo ou parte para realizar a busca"}
            .col-md-3
              = f.input :assessment, label: 'Por processo', input_html: { name: 'assessment', class: '', value: params[:assessment]}
            .col-md-3
              = f.submit "Pesquisar", name: nil, class: 'btn btn-success filter-button', data: { disable_with: t(:disable_with)}
    %hr/
    - if !@cadastre.nil?
      .row 
        .col-md-12
          %h3 Detalhamento do candidato
          %table.table.table-striped.table-bordered.table-hover
            %thead
              %tr 
                %th CPF 
                %th Nome 
                %th Situação 
                %th Programa
            %tbody
              %tr
                %td= @cadastre.cpf.format_cpf
                %td= @cadastre.name
                %td
                  %b= @cadastre.current_situation_name
                %td= @cadastre.program.name
      .row 
        .col-md-12
          %h3 Ocorrências - Total #{@cadastre.cadastre_ocurrences.count}
          .row
            .col-md-12
              %table.table.table-striped.table-bordered.table-hover
                %thead
                  %tr 
                    %th Tipo 
                    %th Ocorrência 
                    %th Descrição 
                    %th Data 
                    %th Ações
                %tbody
                  - @cadastre.cadastre_ocurrences.order('created_at DESC').each do |item|
                    %tr 
                      %td= item.ocurrence_type_id
                      %td= item.ocurrence_situation.name
                      %td= item.description
                      %td= item.created_at.strftime("%d/%m/%Y às %H:%M")
                      %td
                        = link_to "", "#", class: 'btn btn-success btn-xs glyphicon glyphicon-ok'
                        = link_to "", "#", class: 'btn btn-primary btn-xs glyphicon glyphicon-share-alt'
    - else
      .row
        .col-md-12
          %i Nenhum registro encontrado, favor verifique os dados informados e tente novamente.