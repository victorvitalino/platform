.panel.panel-default
  .panel-heading
    %h4.panel-title Gestão de ocorrências cadastral
  .panel-body
    .row
      .col-md-3
        %h3 Pesquisar CPF
        .row
          .col-md-12
            = simple_form_for @cadastre, url: search_ocurrences_path, method: :post do |f|
              .row
                .col-md-10
                  = f.input :cpf, label: false, input_html: { class: 'cpf'}
              .row
                .col-md-10
                  = f.submit "Pesquisar", class: 'btn btn-success', data: { disable_with: t(:disable_with)}
      .col-md-9
        %h3 Últimas ocorrências
        .row
          .col-md-12
            %table.table.table-bordered.table-striped.table-hover
              %thead
                %tr 
                  %th #  
                  %th CPF  
                  %th Ocorrência  
                  %th Tipo  
                  %th Data  
                  %th Verificada  
              %tbody
                %tr 
                  %td
                  %td
                  %td
                  %td
                  %td
                  %td