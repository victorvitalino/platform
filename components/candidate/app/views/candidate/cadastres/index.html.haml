.row
  .col-md-3
    .panel.panel-default
      .panel-heading{style: 'margin-bottom: 0px;'}
        %h4.panel-title
          Pesquisa
      
      .panel-body
        .row
          .col-md-12
            = simple_form_for url_for, method: :get do |f|
              .row
                .col-md-12
                  = f.input :cpf, label: 'Por CPF', input_html: { name: 'cpf', placeholder: "Digite o CPF", value: params[:cpf], class: 'cpf'}
              .row
                .col-md-12
                  = f.input :name, label: 'Por Nome', input_html: { name: 'name', placeholder: "Digite o nome", value: params[:name]}
              .row
                .col-md-12
                  = f.input :assessment, label: 'Por Nº de processo', input_html: { name: 'assessment', placeholder: "Digite o Nº", value: params[:assessment]}
              .row
                .col-md-12
                  = f.submit "Realizar pesquisa", name: nil, class: 'btn btn-success btn-lg', data: { disable_with: t(:disabled_button)}
  .col-md-9
    .panel.panel-default
      .panel-heading{style: 'margin-bottom: 0px;'}
        %h4.panel-title
          Detalhamento
      .panel-body
        .row
          .col-md-12
            - if @cadastre.present?
              - if @cadastre.count > 1
                = render 'detail_table'
              - else
                = render 'detail_show', cadastre: @cadastre.last
            - else
              Cadastro não encontrado

      