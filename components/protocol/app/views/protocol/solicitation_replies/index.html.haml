.page-content
  .panel
    .panel-heading
      .panel-title
        %h4
          Listagem de solicitações
          = link_to 'Nova Resposta', new_solicitation_solicitation_reply_path,class: 'btn btn-success pull-right mgl btn-sm',data: {disable_with: "carregando..."}  if policy(:Assessment, namespace: Protocol).create?
    .panel-body
      .row
        .col-md-12
        - if @solicitation_replies.present?
          .table-responsive{:style => "overflow: hidden; outline: none;", :tabindex => "3"}
            %table#data-table-command.table.table-striped.table-bordered
              %thead
                %tr
                  %th Número
                  %th Tipo de Documento
                  %th Solicitante
                  %th Ações
              %tbody
                - @solicitation_replies.each do |a|
                  %tr
                    %td
                      = a.assessment.document_number
                    %td
                      = a.assessment.document_type.name if a.assessment.document_type.present?
                    %td
                      = a.staff.name if a.staff.present?
                    %td.col-md-2
                      = link_to "", edit_solicitation_solicitation_reply_path(a), title: "editar",  class: 'glyphicon glyphicon-pencil btn btn-primary btn-xs',data: {disable_with: "carregando..."}
                      = link_to "", solicitation_solicitation_reply_path(a), title: "visualizar",  class: 'glyphicon glyphicon-eye-open btn btn-success btn-xs',data: {disable_with: "carregando..."}
                      = link_to "", solicitation_solicitation_reply_path(a), method: :delete, class: 'glyphicon glyphicon-remove btn-xs btn btn-danger', data: {confirm: "#{t(:confirm_delete)}"}
