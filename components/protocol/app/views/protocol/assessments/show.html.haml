.panel.panel-default
  .panel-heading
    .panel-title
      %h4
        Dados da autuação
  .panel-body
    .row
      .col-md-12
        .row
          .col-md-4
            %label Tipo de Documento:
            = @assessment.document_type.name if @assessment.document_type.present?
          .col-md-4
            %label Número do Documento:
            = @assessment.document_number
        .row
          .col-md-8
            %label Unidade Solicitante:
            = @assessment.requesting_unit
        .row
          .col-md-8
            %label Interessado:
            = @assessment.recipient
        .row
          .col-md-8
            %label Cidade:
            = @assessment.city
        .row
          .col-md-8
            %label Endereço:
            = @assessment.address
        .row
          .col-md-4
            %label CPF:
            = @assessment.cpf
          .col-md-4
            %label CNPJ:
            = @assessment.cnpj
        .row
          .col-md-8
            %label Assunto:
            = @assessment.subject.name if @assessment.subject.present?
        .row
          .col-md-8
            %label Descrição Assunto:
            = @assessment.description_subject
        .row
          .col-md-8
            %label Assinado Por:
            = @assessment.sign_by
        .row
          .col-md-8
            %label Observação:
            = @assessment.observation
        .row
          .col-md-4
            %label Finalizado:
            = @assessment.finalized
          .col-md-4
            %label Data de finalização:
            = @assessment.finalized_date
        .row
          .col-md-4
            %label Respondido:
            = @assessment.responded
          .col-md-4
            %label Data de resposta:
            = @assessment.responded_date
        .row
          .col-md-4
            %label Data do documento:
            = @assessment.created_at.strftime("%d-%m-%Y - %H:%M:%S")
        .row
          .col-md-12
            %br
        .row.no-print
          .col-md-12
            = render 'index_conduct'
        .row.no-print
          .col-md-12
            = render 'index_attach'
        .row.no-print
          .col-md-12
            = render 'index_digital'
        .row.no-print
          .col-md-12
            = render 'index_location'
          %br
          %br
        .row.no-print
          .col-md-4
            = link_to "voltar",  assessments_path, class: 'btn btn-default btn-sm',data: {disable_with: "carregando..."}
