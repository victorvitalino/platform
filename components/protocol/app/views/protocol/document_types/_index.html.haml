- @document_types.each_with_index do |j, i|
 %tr
  %td.col-md-1
   = i + 1
  %td
   = j.name
  %td
   = j.description
  %td
   = j.status ? "Ativo" : "Inativo"
  %td.col-md-2
   = link_to "", edit_document_type_path(j), remote: true, class: 'glyphicon glyphicon-pencil btn btn-primary btn-xs',data: {disable_with: "carregando..."}
   = link_to "", document_type_path(j), method: :delete, class: 'glyphicon glyphicon-remove btn btn btn-danger btn-xs', data: {confirm: "#{t(:confirm_delete)}"}
