= simple_form_for @solicitation do |f|
 .row
  .col-md-4
   = f.label :document_number, class: 'fg-label'
   = f.input :document_number, label: false, input_html: { class: 'document_number', value: f.object.assessment.present? ? @solicitation.assessment.document_number : nil }
  .col-md-4
   = f.label :document_type, class: 'fg-label'
   = f.input :document_type, label: false , collection: Protocol::DocumentType.where(status: true), selected: f.object.assessment.present? ? @solicitation.assessment.document_type.id : nil,  prompt: 'selecione...'
 .row
  .col-md-4
   = f.label 'Data do pedido', as: 'string', class: 'fg-label'
   = f.input :order_date, as: 'string', label: false, input_html: { class: 'date', placeholder: '00/00/0000' , value: (@solicitation.order_date) ? localize(f.object.order_date) : nil}
 .row
  .col-md-8
   = f.label :observation, class: 'fg-label'
   = f.input :observation, label: false, input_html: {placeholder: 'Preencha'}
 .row
  .col-md-4
   = f.label :priority, class: 'fg-label'
   = f.input :priority, label: false, prompt: 'selecione...'
 .row
  .col-md-8
   = f.submit 'salvar' , class: 'btn btn-success btn-sm',data: {disable_with: "carregando..."}
   = link_to "voltar",  solicitations_path, class: 'btn btn-default btn-sm',data: {disable_with: "carregando..."}
