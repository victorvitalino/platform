= simple_form_for(@cadastre) do |f|
  .row
    .col-md-6
      = f.input :name, input_html: { placeholder: 'Digite um nome'}
    .col-md-6
      = f.input :fantasy_name, input_html: { placeholder: 'Digite um nome'}
  .row
    .col-md-3
      = f.input :cnpj, input_html: { class: 'cnpj', placeholder: 'Digite um cnpj', disabled: true}
    .col-md-3
      = f.input :email, input_html: { placeholder: 'Digite um email'}
    .col-md-2
      = f.input :telephone, input_html: { placeholder: 'Digite um telefone'}
    .col-md-2
      = f.input :telephone_optional, input_html: { placeholder: 'Digite um telefone'}
    .col-md-2
      = f.input :celphone, input_html: { placeholder: 'Digite um nome'}
  %hr/
  .row
    .col-md-3
      = f.association :city, collection: Address::City.federal_district, include_blank: false
  .row
    .col-md-6
      = f.input :address, input_html: { placeholder: 'Digite um nome'}
    .col-md-4
      = f.input :complement, input_html: { placeholder: 'Digite um nome'}
    .col-md-2
      = f.input :cep, input_html: { placeholder: 'Digite um nome'}
  %hr/
  .row
    .col-md-12
      = f.input :observation
  %hr/
  .row
    .col-md-12
      = f.button :submit, class: 'btn btn-success'
      = link_to "Voltar para detalhamento", cadastre_path(f.object.id), class: 'btn btn-default'