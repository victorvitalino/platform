.panel.panel-default
  .panel-heading
    .panel-title
      %h4 Resumo de Entidades Recadastradas
  .panel-body
    .row
      .col-md-8
        %h2
          %b Total de Entidades -
          = number_with_delimiter(@entities.count, delimiter: ".")
    %hr
    .row
      .col-md-6
        %h4 Resumo do recadastramento
        = pie_chart [["Formalizaram processo",@process.count],["Enviaram documentos", (@entities.senders.count - @entities.complete.count)],["Enviaram todos os documentos" + "<br>" + "mas não formalizaram processo", (@entities.complete.count - @process.count)],["Não enviaram documentos", @notsend]]
      .col-md-6
        %h4 Entidades participantes
        = pie_chart [["Entidades antigas", @olds], ["Novas entidades", @news.count]]
