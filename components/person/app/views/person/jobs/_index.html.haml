- @jobs.each_with_index do |j, i|
 %tr
  %td.col-md-1
   = i + 1
  %td
   = j.name
  %td
   = j.code
  %td
   = j.status ? "Ativo" : "Inativo"
  %td.col-md-2
   = link_to "", edit_job_path(j), remote: true, class: 'glyphicon glyphicon-pencil btn btn-primary btn-xs' if policy(:job, namespace: Person).update?
   = link_to "", job_path(j), method: :delete, class: 'glyphicon glyphicon-remove btn btn-danger btn-xs', data: {confirm: "#{t(:confirm_delete)}"} if policy(:job, namespace: Person).destroy?
