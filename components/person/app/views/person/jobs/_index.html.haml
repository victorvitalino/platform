- @jobs.each_with_index do |j, i|
 %tr
  %td.col-md-1
   = i + 1
  %td
   = j.name
  %td
   = j.code
  %td
   = j.status ? "Ativo" : "Inativo"
  %td.col-md-2
   = link_to "", edit_job_path(j), remote: true, class: 'md-mode-edit btn btn-primary waves-effect waves-button waves-float' if policy(:job, namespace: Person).update?
   = link_to "", job_path(j), method: :delete, class: 'md-highlight-remove btn btn-danger waves-effect waves-button waves-float', data: {confirm: "#{t(:confirm_delete)}"} if policy(:job, namespace: Person).destroy?
