.page-content
  .panel
    .panel-heading
      .panel-title
        %h4
          Cargos
          = link_to 'novo cargo', new_job_path, remote: true, class: 'btn btn-success pull-right' if policy(:job, namespace: Person).create?
    .panel-body
      .row
        .col-md-12
          .table-responsive{:style => "overflow: hidden; outline: none;", :tabindex => "3"}
            %table.table.table-hover.table-striped.table-bordered.table-condensed
              %thead
                %tr
                  %th #
                  %th Nome
                  %th Código
                  %th Status
                  %th Ações
              %tbody.index-job
                = render 'index'
