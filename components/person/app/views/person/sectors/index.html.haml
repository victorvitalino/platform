.page-content
  .panel
    .panel-heading
      .panel-title
        %h4
          Setores
          = link_to 'novo setor', new_sector_path, remote: true, class: 'btn btn-success btn-sm pull-right'if policy(:sector, namespace: Person).create?
        %small Listagem de setores
    .panel-body
      .row
        = simple_form_for sectors_path, method: :get do |f|
          .col-md-2
            = f.label "Ativos?"
            = f.input :status, as: :select, label: false, selected: params[:status], include_blank: "Todos", input_html: { name: :status}
          .col-md-2{style: 'padding-top: 24px'}
            = f.submit "Filtar resultado", name: nil, class: 'btn btn-primary', data: { disable_with:  t(:disabled_button)}
      %hr/
      .row
        .col-md-12
          %table.table.table-hover.table-bordered.table-striped
            %thead
              %tr
                %th Nome
                %th Sigla
                %th Setor Pai
                %th Responsável
                %th Status
                %th Ações
            %tbody.index-sector
              = render 'index'
