= simple_form_for @system, remote: true do |f|
  .row
    .col-md-12
      = f.label :name, class: 'fg-label'
      = f.input :name, label: false, input_html: { placeholder: 'Digite um nome'}
  .row
    .col-md-12
      = f.label :code, class: 'fg-label'
      = f.input :code, label: false, input_html: { placeholder: 'Digite um c√≥digo identificador'}
  .row
    .col-md-3
      = f.input :status, as: :select, include_blank: false 
  .row
    .col-md-3
      = f.association :system_module, include_blank: false 
  %hr/
  .row
    .col-md-12
      = f.button :submit, class: 'btn btn-success', data: { disable_with: t(:disabled_button)}