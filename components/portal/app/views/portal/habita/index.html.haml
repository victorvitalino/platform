:javascript
  $(window).scroll(function(){
      var amountScrolled = 300;
      var win = $(window).scrollTop();
    	if (win > amountScrolled) {
    		$('a.back-to-tops').fadeIn('slow');
    	} else {
    		$('a.back-to-tops').fadeOut('slow');
    	}
  });
  $('a.back-to-tops').click(function() {
  	$('html, body').animate({

  		scrollTop: 0
  	}, 700);
  	return false;
  });
