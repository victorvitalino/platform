= simple_form_for @processing, url: url_for, method: :get, remote: true do |f|
  .row
    .col-md-3
      = f.input :enterprise_id, as: :select, collection: f.object.enterprise, include_blank: false, input_html: { id: 'enterprise_id', onchange: 'update_step(this.value)', name: 'enterprise_id'}
    .col-md-3
      = f.input :step_id, as: :select, input_html: { id: 'step_id',onchange: 'update_demand(this.value)', name: 'step_id'}, include_blank: "Selecione o empreendimento...", collection: f.object.step(f.object.enterprise_id)        
    .col-md-3
      = f.submit "Carregar dados", name: nil, class: 'btn btn-primary filter-button', data: { disable_with: t(:disable_with)}