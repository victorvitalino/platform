= simple_form_for(@nav) do |f|
  .card-body.card-padding
    .row
      .col-md-11
        = f.input :name, input_html: { placeholder: 'Digite um título'}
    .row
      .col-md-3
        = f.association :link_page, label_method: :title_concat, prompt: 'Selecione...'
      .col-md-3
        = f.association :category, prompt: 'Selecione...'
      .col-md-2
        = f.input :target, as: :select, collection: Cms::Nav.targets.keys.to_a, prompt: 'selecione...'
      .col-md-1
        = f.input :order, input_html: { placeholder: '' }
      .col-md-2
        = f.input :type_nav, as: 'select',collection:Cms::Nav.type_navs.keys.to_a, prompt: 'Selecione...'
    .row
      .col-md-6
        = f.input :link_external, input_html: { placeholder: 'Digite um título'}
      .col-md-2
        = f.input :publish, as: :select, include_blank: false
    %hr/
    .row
      .col-md-12
        = f.button :submit, class: 'btn btn-success', data: { disable_with: t(:disabled_button)}
        = link_to t(:button_back),navs_path , class: 'btn btn-default'
