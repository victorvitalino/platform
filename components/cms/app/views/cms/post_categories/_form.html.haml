= simple_form_for(@post_category) do |f|
  .card-body.card-padding
    .row
      .col-md-6
        = f.label :title, class: 'fg-label'
        = f.input :title, label: false, input_html: { placeholder: 'Digite um nome'}
    .row
      .col-md-2
        = f.input :status, as: :select, include_blank: false
    %hr/
    .row
      .col-md-12
        = f.button :submit, class: 'btn btn-success', data: { disable_with: t(:disabled_button)}
        = link_to t(:button_back), post_categories_path, class: 'btn btn-default'
