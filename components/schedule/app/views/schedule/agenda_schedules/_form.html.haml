= simple_form_for @schedule, url: agenda_agenda_schedule_path, method: :put do |f|
  .row
    .col-md-3
      = f.label :status
      = f.input :status, as: :select, collection: Schedule::AgendaSchedule.statuses.keys.map { |key| [key.humanize, key]}, include_blank: false, label: false
    .col-md-6
      = f.label :observation
      = f.input :observation, label: false, input_html: { placeholder: "Digite uma observação"}
    .col-md-2{style: 'padding-top: 27px'}
      = f.submit "Atualizar agendamento", class: 'btn btn-success btn-lg', data: { disable_with: t(:disable_with)} 
