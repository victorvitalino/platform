= simple_form_for([@project, @page]) do |f| 
  .card-body.card-padding
    .row
      .col-md-12
        = f.label :title, class: 'fg-label'
        = f.input :title, label: false, prompt: 'selecione...'
    .row
      .col-md-12
        = f.input :content, input_html: { id: "content", class: 'tinymce', rows: 30}
    .row
      .col-md-2
        = f.label :publish
        = f.input :publish, label: false, as: :select, include_blank: false
      
    %hr/
    .row
      .col-md-12
        = f.button :submit, class: 'btn btn-success', data: {disable_with: t(:disable_with)}
        = link_to "voltar", project_path(id: @project, q: 'paginas'),class: 'btn btn-dark' 

