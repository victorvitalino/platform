/ conteudo da pagina
.container
  .row
    .col-md-12.box
      .box_internal
        .row
          .col-md-12
            .container
              %h1
                %b= @list.title
        .row
          .col-md-12
            .container
              = @list.description.to_s.html_safe
        %hr/
        .row
          .container
            - if @list.cpf_filter
              .col-md-6
                = simple_form_for url_for, method: :get do |f|
                  .row
                    - if @list.name_filter
                      .col-md-5
                        = f.label "Nome", class: 'fg-label'
                        = f.input :by_name, label: false, input_html: { name:  'by_name', value: params[:by_name]}
                    .col-md-5
                      = f.input :cpf, input_html: { name:  'cpf', value: params[:cpf]}
                    .col-md-2{style: 'padding-top: 27px'}
                      = f.submit 'Pesquisar', name: nil, class: 'btn btn-success', data: {  disable_with: "Pesquisando aguarde..."}
            .col-md-3
            .col-md-3
              %br/
              %br/
              %h4
                %b Total da lista: #{number_with_delimiter(@geral.count, delimiter: ".")}
        .row
          .col-md-12
            - if @candidates.present?
              %table#data-table-command.table.table-striped.table-vmiddle.datatable
                %thead
                  %tr
                    %th Posição
                    %th Nome
                    %th CPF
                    %th Pontuação
                    - if @candidates.first.program_id == 2
                      %th Sigla
                    %th Situação
                %tbody
                  - @candidates.each do |candidate|
                    %tr
                      %td.col-md-1= @geral.map(&:cpf).find_index(candidate.cpf) + 1
                      %td= link_to candidate.name, candidate_path(candidate.id), data: {disable_with: "Carregando aguarde..."}
                      %td= candidate.cpf.format_obfuscator_cpf
                      %td= candidate.total
                      - if @candidates.first.program_id == 2
                        %td= candidate.fantasy_name
                      %td
                        %span.label.label-success
                          - if candidate.cadastre.enterprise_cadastres.present?
                            - if candidate.cadastre.enterprise_cadastres.last.inactive == true
                              = "#{candidate.cadastre.current_situation_name} - #{candidate.cadastre.enterprise_cadastres.where(inactive: true).count}º RECUSA - #{candidate.cadastre.enterprise_cadastres.last.enterprise.name}"
                            - elsif candidate.cadastre.enterprise_cadastres.nil?
                              = "#{candidate.cadastre.current_situation_name}"
                            - else
                              = "#{candidate.cadastre.current_situation_name} - INDICADO - #{candidate.cadastre.enterprise_cadastres.last.enterprise.name}"
                          - else
                            = "#{candidate.cadastre.current_situation_name}"
            - else
              %b Sem resultado para consulta.
        .row
          .col-md-6.col-md-offset-3
            .container
              = will_paginate @candidates, renderer: BootstrapPagination::Rails
